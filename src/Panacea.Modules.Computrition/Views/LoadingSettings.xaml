<UserControl
    x:Class="Panacea.Modules.Computrition.Views.LoadingSettings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Panacea.Modules.Computrition.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:pcontrols="clr-namespace:Panacea.Controls;assembly=Panacea.Controls"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="White"
    mc:Ignorable="d">
    <Grid
        Margin="30"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Center"
        TextElement.FontSize="{DynamicResource FontSize-Normal}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock
            Margin="5"
            FontSize="{DynamicResource FontSize-Large}"
            Text="{Binding Status}"
            TextAlignment="Center" />
        <ProgressBar Grid.Row="1" />
    </Grid>
</UserControl>
